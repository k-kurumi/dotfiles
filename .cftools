# cftools

gudpp_organizations() {
  url=${1:-"/v2/organizations"}

  json=`${GUD:-gud} curl ${url}`

  echo $json | jq -c '.resources[]|
  {
    name: .entity.name,
    guid: .metadata.guid
  }'

  url=`echo $json | jq -c -r 'if .next_url == null then empty else .next_url end'`
  [ ! -z $url ] && gudpp_organizations $url
  return 0
}

