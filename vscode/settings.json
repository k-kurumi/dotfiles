// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "Cica",
  "editor.fontSize": 16,
  "scm.inputFontSize": 16,

  // フォントを含めたUI全体の倍率
  "window.zoomLevel": 0.6,

  // terminal
  "terminal.integrated.fontSize": 16,
  // 選択でコピー
  "terminal.integrated.copyOnSelection": true,
  // 右クリックで貼り付け
  "terminal.integrated.rightClickBehavior": "paste",
  // ターミナルがある状態で終了するとき確認する
  "terminal.integrated.confirmOnExit": true,

  // タブサイズの変更など
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // カーソルを点滅させない
  "editor.cursorBlinking": "solid",

  // ctrlとマウスホイールでズームする
  "editor.mouseWheelZoom": true,

  // allのときスペースやタブを可視化
  // "editor.renderWhitespace": "all",

  // タブで開く
  // 開きすぎて重くなるので使用しない
  // ファイルをダブルクリックすればタブ固定の
  // ようになりタブ再利用されなくなる
  // "workbench.editor.enablePreview": false,

  // フルスクリーンで起動する
  //"window.restoreFullscreen": true,

  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 240,

  // ファイル末尾は改行を入れる
  "files.insertFinalNewline": true,
  "workbench.startupEditor": "newUntitledFile",

  // 制御文字を表示
  "editor.renderControlCharacters": true,

  // スペースのみの行は削除
  "files.trimFinalNewlines": true,
  // 末尾の空白を削除
  "files.trimTrailingWhitespace": true,

  // ツリーから選択したとき常にタブで開く
  "workbench.editor.enablePreview": false,

  // command+pから検索して開くとき常にタブで開く
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "[markdown]": {
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": false
  },

  "window.titleBarStyle": "custom",
  "explorer.confirmDelete": false,
  "editor.fontLigatures": true,
  "editor.fontWeight": "bold",

  "files.eol": "\n",

  // テーマ
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Gruvbox Dark Medium",

  // prettier
  "prettier.singleQuote": true,

  // gitlens
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.defaultDateFormat": "YYYY-MM-DD",
  "gitlens.defaultTimeFormat": "HH:mm:ss",
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD HH:mm:ss",
  "gitlens.hovers.currentLine.over": "line",

  // python
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],

  // golang
  "go.goroot": "~/go",
  "go.gopath": "~/dev",

  // ruby
  "ruby.intellisense": "rubyLocate",
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "erb": "html,"
  },

  // フォーマッタの指定
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
